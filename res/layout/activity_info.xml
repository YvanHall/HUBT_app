<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#F7F7F7"
    android:orientation="vertical"
    android:scrollbars="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#59C1EF"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/info_back_ib"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/selector_back_change" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="学籍信息"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </FrameLayout>

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:shrinkColumns="1" >

            <TableRow
                android:layout_marginTop="40dp" 
                android:gravity="center">

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:src="@drawable/info"/>
            </TableRow>

            <TableRow android:layout_marginTop="40dp" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="@string/info_name"
                    android:textColor="#4D4D4D"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/info_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textColor="#808080"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow android:layout_marginTop="17.5dp" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="@string/info_stu_num"
                    android:textColor="#4D4D4D"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/info_stu_num"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textColor="#808080"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow android:layout_marginTop="17.5dp" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="@string/info_class_name"
                    android:textColor="#4D4D4D"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/info_class_name"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textColor="#808080"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow android:layout_marginTop="17.5dp" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="@string/info_sex"
                    android:textColor="#4D4D4D"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/info_sex"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textColor="#808080"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow android:layout_marginTop="17.5dp" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="@string/info_IDCard"
                    android:textColor="#4D4D4D"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/info_IDCard"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textColor="#808080"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow android:layout_marginTop="17.5dp" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="@string/info_ethnic"
                    android:textColor="#4D4D4D"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/info_ethnic"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textColor="#808080"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow android:layout_marginTop="17.5dp" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="@string/info_college"
                    android:textColor="#4D4D4D"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/info_college"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textColor="#808080"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow android:layout_marginTop="17.5dp" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="@string/info_major"
                    android:textColor="#4D4D4D"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/info_major"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textColor="#808080"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow android:layout_marginTop="17.5dp" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="@string/info_year"
                    android:textColor="#4D4D4D"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/info_year"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textColor="#808080"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow android:layout_marginTop="17.5dp" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="@string/info_political_status"
                    android:textColor="#4D4D4D"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/info_potitical_status"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textColor="#808080"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow android:layout_marginTop="17.5dp" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="@string/info_birthday"
                    android:textColor="#4D4D4D"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/info_birthday"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textColor="#808080"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow android:layout_marginTop="17.5dp" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="@string/info_enterscholl"
                    android:textColor="#4D4D4D"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/info_enterscholl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textColor="#808080"
                    android:textSize="14dp" />
            </TableRow>

            <TableRow android:layout_marginTop="17.5dp" >

                <TextView
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="35dp"
                    android:text="@string/info_left_scholl"
                    android:textColor="#4D4D4D"
                    android:textSize="14dp" />

                <TextView
                    android:id="@+id/info_left_scholl"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:textColor="#808080"
                    android:textSize="14dp" />
            </TableRow>
        </TableLayout>
    </ScrollView>

</LinearLayout>