                android:src="@drawable/week18" />
        </LinearLayout>
    </HorizontalScrollView>
    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:scaleType="fitXY"
        android:src="@drawable/line_out" />

</LinearLayout>