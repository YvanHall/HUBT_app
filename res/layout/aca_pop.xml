<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="135dp"
        android:background="#F7F7F7"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.5dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/aca_1"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="@drawable/selector_aca1_change" />

            <Button
                android:id="@+id/aca_2"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/selector_aca2_change" />

            <Button
                android:id="@+id/aca_3"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/selector_aca3_change" />

            <Button
                android:id="@+id/aca_4"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/selector_aca4_change" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.5dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/aca_5"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="@drawable/selector_aca5_change" />

            <Button
                android:id="@+id/aca_6"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/selector_aca6_change" />

            <Button
                android:id="@+id/aca_7"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/selector_aca7_change" />

            <Button
                android:id="@+id/aca_8"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/selector_aca8_change" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17.5dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/aca_9"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:background="@drawable/selector_aca9_change" />

            <Button
                android:id="@+id/aca_10"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/selector_aca10_change" />

            <Button
                android:id="@+id/aca_11"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/selector_aca11_change" />

            <Button
                android:id="@+id/aca_12"
                android:layout_width="70dp"
                android:layout_height="25dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/selector_aca12_change" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:layout_gravity="bottom"
        android:scaleType="fitXY"
        android:src="@drawable/line_out" />

</LinearLayout>