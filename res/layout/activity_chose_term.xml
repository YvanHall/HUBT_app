<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:gravity="center_horizontal"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#59C1EF"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/chose_term_sidebar_ib"
            android:layout_width="65dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:src="@drawable/selector_sidebar_change" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="查成绩"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </FrameLayout>

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="40dp"
        android:scaleType="fitXY"
        android:src="@drawable/chose_terms" />

    <TextView
        android:id="@+id/title_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="@string/chose_term"
        android:textColor="#4D4D4D"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/text_score_info"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:textColor="#808080"
        android:textSize="13dp" />

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:layout_marginTop="26dp"
        android:src="@drawable/line_out" 
        android:scaleType="fitXY"/>

    <com.young.util.DropDownListView
        android:id="@+id/list_terms"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    </com.young.util.DropDownListView>

</LinearLayout>