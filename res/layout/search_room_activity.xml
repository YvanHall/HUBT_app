<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F7F7"
    android:orientation="vertical" >
    
<FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#59C1EF"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/search_room_sidebar_ib"
            android:layout_width="65dp"
            android:layout_height="48dp"
            android:src="@drawable/selector_sidebar_change" />

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/spot"
                android:layout_width="65dp"
                android:layout_height="48dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/selector_map_button_change" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="查教室"
            android:textColor="@android:color/white"
            android:textSize="18dp" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="35dp"
        android:background="#FFFFFF"
        android:orientation="horizontal" >

        <TextView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/tv_1"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@drawable/selector_title_change"
            android:text="一教" />

        <TextView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/tv_2"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@drawable/selector_title_change"
            android:text="二教" />

        <TextView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/tv_3"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@drawable/selector_title_change"
            android:text="北教" />

        <TextView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/tv_4"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@drawable/selector_title_change"
            android:text="艺设" />

        <TextView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/tv_5"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:textSize="14dp"
            android:textColor="@drawable/selector_title_change"
            android:text="文科楼" />
        <RelativeLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical">
        <ImageView
            android:id="@+id/searchroom_arrow_ib" 
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/selector_arrow_button_change"
            android:layout_alignParentRight="true"
            android:layout_marginRight="11dp"/>
        </RelativeLayout>

    </LinearLayout>
            
        <ImageView 
            android:layout_gravity="top"
            android:layout_width="fill_parent"
            android:layout_height="1px"
            android:src="@drawable/line_out"
            android:scaleType="fitXY"/>

    <FrameLayout
        android:id="@+id/fl_room"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
</LinearLayout>
