<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:background="#F7F7F7"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
    <ImageView
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#59C1EF"/>
    
    <ImageView 
                android:id="@+id/changePwd_back_ib"
                android:layout_width="50dp"
                android:layout_height="48dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/selector_back_change"/>
    
    <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textSize="18dp"
                android:textColor="#ffffff"
                android:text="修改密码"
                />
    </FrameLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="40dp"
            android:src="@drawable/userhead_man"
            android:background="@null"/>

            <FrameLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="27dp">
            <EditText
                android:id="@+id/change_oldpw"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:inputType="textPassword"
                android:background="@null"
                android:hint="原密码"
                android:layout_marginLeft="80dp"
                android:gravity="left"
                android:textColor="#4D4D4D"
                android:textColorHint="#DBDDDD"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:textSize="15dp" />
            <ImageView 
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="35dp"
                android:src="@drawable/old_word"/>
            <ImageView 
                android:layout_width="280dp"
                android:layout_height="1px"
                android:layout_marginTop="47dp"
                android:layout_marginLeft="40.5dp"
                android:scaleType="fitXY"
                android:src="@drawable/selector_line_change"/>
            </FrameLayout>

            <FrameLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">
            <EditText
                android:id="@+id/change_newpw"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:inputType="textPassword"
                android:background="@null"
                android:hint="请输入密码"
                android:gravity="left"
                android:layout_marginLeft="80dp"
                android:textColor="#4D4D4D"
                android:textColorHint="#DBDDDD"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:textSize="15dp" />
            <ImageView 
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="35dp"
                android:src="@drawable/new_word"/>
            
            <ImageView 
                android:layout_width="280dp"
                android:layout_height="1px"
                android:layout_marginTop="47dp"
                android:layout_marginLeft="40.5dp"
                android:scaleType="fitXY"
                android:src="@drawable/line_out"/>
            </FrameLayout>
            
            <FrameLayout 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="7dp">
            <EditText
                android:id="@+id/change_conpw"
                android:layout_width="250dp"
                android:layout_height="30dp"
                android:inputType="textPassword"
                android:background="@null"
                android:hint="确认密码"
                android:gravity="left"
                android:layout_marginLeft="80dp"
                android:layout_gravity="center_vertical"
                android:singleLine="true"
                android:textColor="#4D4D4D"
                android:textColorHint="#DBDDDD"
                android:textSize="15dp" />
            <ImageView 
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="35dp"
                android:src="@drawable/check_word"/>
            
            <ImageView 
                android:layout_width="280dp"
                android:layout_height="1px"
                android:layout_marginTop="47dp"
                android:layout_marginLeft="40.5dp"
                android:scaleType="fitXY"
                android:src="@drawable/line_out"/>
             </FrameLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/changeButton"
            android:layout_width="280dp"
            android:layout_height="44dp"
            android:background="#59C1EF"
            android:textSize="16dp"
            android:layout_gravity="center_horizontal"
            android:textColor="#ffffff" 
            android:text="@string/change_button" />
    </LinearLayout>

</LinearLayout>