<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    
    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="48dp"
            android:background="#59C1EF"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/news_sidebar_ib"
            android:layout_width="65dp"
            android:layout_height="48dp"
            android:src="@drawable/selector_sidebar_change" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="资讯"
            android:textColor="#FFFFFF"
            android:textSize="18dp" />
    </FrameLayout>
    
    <LinearLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        
        <TextView 
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/announcement_tv"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="公告"
            android:textColor="@drawable/selector_title_change"
            android:textSize="14dp"
            android:background="@null"/>
        <TextView 
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/lecture_tv"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="讲座"
            android:textColor="@drawable/selector_title_change"
            android:textSize="14dp"
            android:background="@null"/>
        <TextView 
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/event_tv"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="活动"
            android:textColor="@drawable/selector_title_change"
            android:textSize="14dp"
            android:background="@null"/>
        <TextView
            android:clickable="true"
            android:focusable="true" 
            android:id="@+id/recruitment_tv"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="招聘"
            android:textColor="@drawable/selector_title_change"
            android:textSize="14dp"
            android:background="@null"/>
        <TextView 
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/lost_and_found_tv"
            android:layout_width="60dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="失物招领"
            android:textColor="@drawable/selector_title_change"
            android:textSize="14dp"
            android:background="@null"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_news"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />
    
</LinearLayout>
