<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center_vertical" >

    <com.young.view.ZoomImageView
        android:layout_width="1056dp"
        android:layout_height="708dp"
        android:scaleType="fitXY"
        android:src="@drawable/map2" />

    <ImageView
        android:id="@+id/enlarge_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="145dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/enlarge_out" />

    <ImageView
        android:id="@+id/reduce_iv"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="90dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/reduce_out" />

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="25dp"
        android:layout_marginRight="16dp"
        android:src="@drawable/location_out" />

    <FrameLayout
        android:layout_width="344dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/search_bar" >

        <ImageView
            android:id="@+id/map_sidebar_ib"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/search_side_bar" />

        <ImageView
            android:layout_width="2px"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="48dp"
            android:src="@drawable/search_line" />

        <ImageView
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="59dp"
            android:src="@drawable/search" />

        <EditText
            android:id="@+id/change_oldpw"
            android:layout_width="250dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="88dp"
            android:background="@null"
            android:gravity="left"
            android:hint="搜地点"
            android:inputType="textPostalAddress"
            android:singleLine="true"
            android:textColor="#4D4D4D"
            android:textColorHint="#DBDDDD"
            android:textSize="15dp" />
    </FrameLayout>

</RelativeLayout>